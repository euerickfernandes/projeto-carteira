// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model FinancialAccount {
  id String @id @default(cuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  destinationTransactions FinancialTransaction[] @relation("DestinationAccount")
  sourceTransactions      FinancialTransaction[] @relation("SourceAccount")

  user   User   @relation(fields: [userId], references: [id])
  userId String

  closesAt  Int?
  expiresAt Int?
  limit     Decimal?
  name      String
}

enum TransactionType {
  INCOME
  EXPENSE
  TRANSFER
}

model FinancialTransaction {
  id String @id @default(cuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  category   FinancialTransactionCategory @relation(fields: [categoryId], references: [id])
  categoryId String

  destinationAccount   FinancialAccount? @relation("DestinationAccount", fields: [destinationAccountId], references: [id])
  destinationAccountId String?

  goal   Goal?   @relation(fields: [goalId], references: [id])
  goalId String?

  investiment   Investiment? @relation(fields: [investimentId], references: [id])
  investimentId String?

  sourceAccount   FinancialAccount? @relation("SourceAccount", fields: [sourceAccountId], references: [id])
  sourceAccountId String?

  amount      Decimal
  description String?
  occurredAt  DateTime?
  type        TransactionType
}

model FinancialTransactionCategory {
  id String @id @default(cuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions FinancialTransaction[]

  name String
}

model Goal {
  id String @id @default(cuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions FinancialTransaction[]

  user   User   @relation(fields: [userId], references: [id])
  userId String

  initialAmount Decimal
  goalAmount    Decimal
  name          String
}

model Investiment {
  id String @id @default(cuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  transactions FinancialTransaction[]

  user   User   @relation(fields: [userId], references: [id])
  userId String

  name     String
  netValue Decimal
  taxValue Decimal
}

model User {
  id String @id @default(cuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts     FinancialAccount[]
  goals        Goal[]
  investiments Investiment[]

  email    String
  lastname String
  firstname     String
  password String
}
